<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.trixsoft.cityrangers.activity.IssueDetailsActivity"
     >

    <TextView
        android:id="@+id/issueIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Issue ID"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueId"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="0"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="5" />
     
      <TextView
        android:id="@+id/issueTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Issue Title"
        android:textColor="#ff9900"        
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueTitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="1"
         android:gravity="left"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="5" />
     
     <TextView
        android:id="@+id/issueDescLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Description"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueDesc"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="2"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
      <TextView
        android:id="@+id/issueLocLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Issue Loc"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueLoc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="3"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="aqw" />
      <TextView
        android:id="@+id/issuemapLocLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Issue Map Loc"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issuemapLoc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="4"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
     
      <TextView
        android:id="@+id/issueAllocLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Allocated to"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueAlloc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="5"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
     
      <TextView
        android:id="@+id/issueStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Status"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueStatus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="6"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
      <TextView
        android:id="@+id/issueLoggedByLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="7"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Logged By"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueloggedby"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="7"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
      
      <TextView
        android:id="@+id/issueloggedTSLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Logged in Time"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueloggedTS"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="8"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
      <TextView
        android:id="@+id/issueAcceptedTSLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="9"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Accepted Time"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueAcceptedTS"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="9"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
      <TextView
        android:id="@+id/issueResolvedTSLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Resolved Time"
        android:textColor="#ff9900"
        android:textStyle="bold" />

     <TextView
         android:id="@+id/issueResolvedTS"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_gravity="left|top"
         android:layout_row="10"
         android:gravity="center_horizontal"
         android:paddingLeft="5dp"
         android:paddingTop="10dp"
         android:textColor="#ffffff"
         android:text="sasasa" />
     
       <!-- MAP Fragment -->
    <fragment
        android:id="@+id/location_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_column="0"
         android:layout_row="11"
         android:paddingTop="10dp"
         android:layout_gravity="left|top"
          android:gravity="center_horizontal"
        class="com.google.android.gms.maps.MapFragment" />
     
  

</GridLayout>